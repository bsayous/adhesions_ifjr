<%- model_class = TypeAdhesion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:libelle) %></th>
      <th><%= model_class.human_attribute_name(:type_comptable) %></th>
      <th><%= model_class.human_attribute_name(:montant) %></th>
      <th><%= model_class.human_attribute_name(:droit_vote) %></th>
      <th><%= model_class.human_attribute_name(:periode_adhesion_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @type_adhesions.each do |type_adhesion| %>
      <tr>
        <td><%= link_to type_adhesion.id, type_adhesion_path(type_adhesion) %></td>
        <td><%= type_adhesion.libelle %></td>
        <td><%= type_adhesion.type_comptable %></td>
        <td><%= type_adhesion.montant %></td>
        <td><%= type_adhesion.droit_vote %></td>
        <td><%= type_adhesion.periode_adhesion_id %></td>
        <td><%=l type_adhesion.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_type_adhesion_path(type_adhesion), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      type_adhesion_path(type_adhesion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_type_adhesion_path,
            :class => 'btn btn-primary' %>
