<%- model_class = TypeAdhesion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:libelle) %>:</strong></dt>
  <dd><%= @type_adhesion.libelle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_comptable) %>:</strong></dt>
  <dd><%= @type_adhesion.type_comptable %></dd>
  <dt><strong><%= model_class.human_attribute_name(:montant) %>:</strong></dt>
  <dd><%= @type_adhesion.montant %></dd>
  <dt><strong><%= model_class.human_attribute_name(:droit_vote) %>:</strong></dt>
  <dd><%= @type_adhesion.droit_vote %></dd>
  <dt><strong><%= model_class.human_attribute_name(:periode_adhesion_id) %>:</strong></dt>
  <dd><%= @type_adhesion.periode_adhesion_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              type_adhesions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_type_adhesion_path(@type_adhesion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              type_adhesion_path(@type_adhesion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
