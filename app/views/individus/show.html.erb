<%- model_class = Individu -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nom) %>:</strong></dt>
  <dd><%= @individu.nom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prenom) %>:</strong></dt>
  <dd><%= @individu.prenom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adresse) %>:</strong></dt>
  <dd><%= @individu.adresse %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code_postal) %>:</strong></dt>
  <dd><%= @individu.code_postal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ville) %>:</strong></dt>
  <dd><%= @individu.ville %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
  <dd><%= @individu.telephone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_internet) %>:</strong></dt>
  <dd><%= @individu.site_internet %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activite_principale) %>:</strong></dt>
  <dd><%= @individu.activite_principale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:annee_naissance) %>:</strong></dt>
  <dd><%= @individu.annee_naissance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:institut_de_rattachement) %>:</strong></dt>
  <dd><%= @individu.institut_de_rattachement %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              individus_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_individu_path(@individu), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              individu_path(@individu),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
