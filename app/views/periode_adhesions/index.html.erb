<%- model_class = PeriodeAdhesion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:libelle) %></th>
      <th><%= model_class.human_attribute_name(:date_debut) %></th>
      <th><%= model_class.human_attribute_name(:date_fin) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @periode_adhesions.each do |periode_adhesion| %>
      <tr>
        <td><%= link_to periode_adhesion.id, periode_adhesion_path(periode_adhesion) %></td>
        <td><%= periode_adhesion.libelle %></td>
        <td><%= periode_adhesion.date_debut %></td>
        <td><%= periode_adhesion.date_fin %></td>
        <td><%=l periode_adhesion.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_periode_adhesion_path(periode_adhesion), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      periode_adhesion_path(periode_adhesion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_periode_adhesion_path,
            :class => 'btn btn-primary' %>
