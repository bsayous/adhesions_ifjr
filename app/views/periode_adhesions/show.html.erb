<%- model_class = PeriodeAdhesion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:libelle) %>:</strong></dt>
  <dd><%= @periode_adhesion.libelle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_debut) %>:</strong></dt>
  <dd><%= @periode_adhesion.date_debut %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_fin) %>:</strong></dt>
  <dd><%= @periode_adhesion.date_fin %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              periode_adhesions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_periode_adhesion_path(@periode_adhesion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              periode_adhesion_path(@periode_adhesion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
