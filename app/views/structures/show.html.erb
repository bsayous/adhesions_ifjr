<%- model_class = Structure -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:denomination) %>:</strong></dt>
  <dd><%= @structure.denomination %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activite_principale) %>:</strong></dt>
  <dd><%= @structure.activite_principale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adresse) %>:</strong></dt>
  <dd><%= @structure.adresse %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code_postal) %>:</strong></dt>
  <dd><%= @structure.code_postal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ville) %>:</strong></dt>
  <dd><%= @structure.ville %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
  <dd><%= @structure.telephone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_internet) %>:</strong></dt>
  <dd><%= @structure.site_internet %></dd>
  <dt><strong><%= model_class.human_attribute_name(:annee) %>:</strong></dt>
  <dd><%= @structure.annee %></dd>
</dl>

<div class="form-actions">
  <% if can? :index, Structure %>
    <%= link_to t('.back', :default => t("helpers.links.back")),
                structures_path, :class => 'btn'  %>
  <% end %>
  <% if can? :update, @structure %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_structure_path(@structure), :class => 'btn' %>
  <% end %>
  <% if can? :delete, @structure %>                
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                structure_path(@structure),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
